# 判断语句
age = 20
if age >= 18:
    print('your age is', age)
    print('adult')
    
age = 3
if age >= 18:
    print('your age is', age)
    print('adult')
else:
    print('your age is', age)
    print('teenager')
    

age = 3
if age >= 18:
    print('adult')
elif age >= 6:
    print('teenager')
else:
    print('kid')
    

if x:
    print('True')
    
birth = input('birth: ')
if birth < 2000:
    print('00前')
else:
    print('00后')
